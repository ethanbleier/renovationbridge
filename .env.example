# Secret token for revalidation API route
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
REVALIDATION_SECRET=your-revalidation-secret-key

# Next.js Environment Mode
NODE_ENV=development

# Google Analytics
GA_MEASUREMENT_ID=G-XXXXXXXXXX
NEXT_PUBLIC_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Ads
GOOGLE_ADS_ID=AW-XXXXXXXXXX
NEXT_PUBLIC_GOOGLE_ADS_ID=AW-XXXXXXXXXX

# Database URL (if needed)
DATABASE_URL=mysql://user:password@localhost:3306/database_name

# Content caching time in seconds (5 minutes default)
CONTENT_CACHE_TTL=300

# Vercel related variables will be added during Vercel integration

# Authentication
JWT_SECRET=your-jwt-secret-key-here
JWT_EXPIRY=7d

# Email Configuration
EMAIL_FROM=noreply@example.com
EMAIL_SERVER=smtp://username:password@smtp.example.com:587

# CMS API
API_URL=https://api.example.com/graphql
API_TOKEN=your-api-token

# Vercel related variables
VERCEL_PROJECT_ID=prj_your_project_id
VERCEL_ORG_ID=team_your_org_id
VERCEL_URL=renovationbridge.vercel.app 