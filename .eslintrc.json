{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true,
    "jest": true
  },
  "extends": [
    "eslint:recommended",
    "next/core-web-vitals"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unreachable": "error",
    "react/no-unescaped-entities": "off",
    "no-unused-vars": ["warn", { "varsIgnorePattern": ".*", "args": "none" }],
    "no-undef": "warn",
    "@next/next/no-img-element": "warn"
  }
}
